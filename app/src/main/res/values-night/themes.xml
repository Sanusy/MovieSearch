<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieSearch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/darkSecondaryColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/darkSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/darkSecondaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!-- Text -->
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="itemIconTint">@color/darkSecondaryColor</item>

    </style>
</resources>